bindsym XF86AudioRaiseVolume exec pamixer -i 2 -u --allow-boost
bindsym XF86AudioLowerVolume exec pamixer -d 2 -u
bindsym XF86AudioMute exec pamixer -t


### Lock ###
set $Locker i3lock -i ~/Pictures/luftbild-hamburg-b-4.png -f -t && sleep 1
bindsym XF86HomePage exec $Locker

### Shutdown/Lock/Reboot ###
set $mode_system System (l) lock, (e) logout, (s) shutdown, (r) reboot, (m) monitor adjustment.
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    #bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    #bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id shutdown now, mode "default"
    bindsym m exec --no-startup-id ~/bin/autoxrandr, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+Pause mode "$mode_system"


### Screenshot ###
